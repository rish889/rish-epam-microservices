{
	"info": {
		"_postman_id": "rish-epam-microservices",
		"name": "EPAM Microservices",
		"description": "Collection for testing EPAM microservices APIs",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "localhost"
		}
	],
	"item": [
		{
			"name": "Micro Sender",
			"item": [
				{
					"name": "Send Notification",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"user\": \"John Doe\",\n    \"message\": \"Hello, this is a test notification!\"\n}"
						},
						"url": {
							"raw": "http://{{baseUrl}}:8081/notification",
							"protocol": "http",
							"host": [
								"{{baseUrl}}"
							],
							"port": "8081",
							"path": [
								"notification"
							]
						},
						"description": "Send a notification message to RabbitMQ queue"
					},
					"response": []
				},
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://{{baseUrl}}:8081/actuator/health",
							"protocol": "http",
							"host": [
								"{{baseUrl}}"
							],
							"port": "8081",
							"path": [
								"actuator",
								"health"
							]
						},
						"description": "Check health status of micro-sender service"
					},
					"response": []
				},
				{
					"name": "Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://{{baseUrl}}:8081/actuator/info",
							"protocol": "http",
							"host": [
								"{{baseUrl}}"
							],
							"port": "8081",
							"path": [
								"actuator",
								"info"
							]
						},
						"description": "Get info about micro-sender service"
					},
					"response": []
				}
			]
		},
		{
			"name": "Micro Recipient",
			"item": [
				{
					"name": "Get Messages",
					"request": {
						"method": "GET",
						"header": [],
